<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
<domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.1.9</domain>     <!-- your original test IP -->
        <domain includeSubdomains="true">192.168.1.37</domain>    <!-- another common one -->
        <domain includeSubdomains="true">192.168.1.100</domain>   <!-- add more as needed -->
        <domain includeSubdomains="true">10.0.0.2</domain>        <!-- if you ever use different subnet -->
        <domain includeSubdomains="true">cam.local</domain>       <!-- optional, if mDNS starts working -->
    </domain-config>
</network-security-config>